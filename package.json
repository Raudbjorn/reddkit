{
  "name": "reddkit",
  "version": "1.0.0",
  "description": "A cross-platform Reddit browser application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron . --disable-gpu-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "Sveinbj√∂rn Geirsson <sveinbjorn@sveinbjorn.dev> (https://sveinbjorn.dev)",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "snudown-js": "^4.0.1"
  },
  "build": {
    "appId": "dev.sveinbjorn.reddkit",
    "productName": "redDKit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server/**/*",
      "client/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "client/public/icon.ico"
    }
  }
}
